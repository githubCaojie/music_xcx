/* pages/video/video.wxss */
/* 导航 */
.navScroll {
  display: flex;
  white-space: nowrap;
  height: 80rpx;
}
.navScroll .navItem {
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.navItem .navContent {
  height: 60rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  border-radius: 30rpx;
  margin: 10rpx 0;
}
.navItem .active {
  background-color: #ffefff;
  color: #d43c33;
  font-weight: 600;
}
/* 视频 */
.videoScroll{
  margin-top: 10rpx;
  /* 动态计算css宽高 1vh表示1%的高度 */
  height: calc(100vh - 71rpx);
}
.videoInner {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 20rpx;
}
.videoItem {
  width: 345rpx;
  position: relative;
}

.videoItem .common {
  width: 100%;  
  height: 450rpx;
  border-radius: 10rpx;
}

.videoItem .content {
  font-size: 26rpx;
  height:80rpx;
  line-height: 80rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.videoItem .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
  position: absolute;
  top: 370rpx;
  left: 20rpx;
  border: 1rpx solid #fff;
}

/* footer */
.footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
  font-size: 20rpx;
}
.footer .iconfont {
  font-size: 24rpx;
}

.comments_praised .item {
  margin-right: 10rpx;
}
.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
  height: 24rpx;
  line-height: 24rpx;
}

.comments_praised .btn:after {
  border: none;
}
.comments_praised {
  display: flex;
}