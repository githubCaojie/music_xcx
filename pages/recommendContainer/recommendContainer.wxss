/* pages/recommendContainer/recommendContainer.wxss */
.header {
  display: flex;
  padding: 20rpx;
  position: relative;
}
.header .bg {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
  background-size: 200%;
  background-position: top center;
  filter: blur(25rpx);
  transform: scale(1.2);
}
.header .recommentImg {
  width: 240rpx;
  height: 240rpx;
  border-radius: 15rpx;
  flex-shrink: 0;
}
.header .recommentContent {
  display: flex;
  flex-flow: wrap;
  align-items: center;
  align-content: center;
  justify-content: space-between;
  margin: 0 20rpx;
}
.recommentContent text {
  width: 100%;
  margin: 10rpx 0;
  color: #fff;
  font-size: 28rpx;
}
.recommentContent text.name {
  color: #c7cac8;
  font-size: 26rpx;
}
.recommentContent .btn {
  display: flex;
  background: #fff;
  border-radius: 20rpx;
  margin: 10rpx 0;
}
.recommentContent .btn button {
  font-size: 26rpx;
  background: transparent;
  position: relative;
}
.recommentContent .btn button:first-child::before{
  display: none;
}
.recommentContent .btn button::before {
  content: "";
  width: 1rpx;
  position: absolute;
  height: 60%;
  background: #dfdfdf;
  top: 20%;
  left: 0;
}
.recommentContent .btn button::after {
  border: 0;
}
.recommentContent .btn button .iconfont {
  color: #000;
}
/* 列表 */
.listContainer {
  position: relative;
  padding: 0 20rpx;
  border-radius: 30rpx;
  background: #ffffff;
}
.listHeader {
  height: 80rpx;
  line-height: 80rpx;
}
.listHeader .changeMore {
  float: right;
}
.listScroll {
  height: calc(100vh - 360rpx);
}
.scrollItem {
  display: flex;
  margin-bottom: 20rpx;
}
.scrollItem image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}
.musicInfo {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.musicInfo text {
  max-width: 500rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.musicInfo .author {
  color: #828282;
}
.scrollItem .iconfont {
  position: absolute;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
}